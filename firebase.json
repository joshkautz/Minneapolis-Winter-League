{
  "functions": [
    {
      "source": "Functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix Functions ci",
        "npx eslint Functions"
      ]
    }
  ],
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "predeploy": [
      "npm --prefix App ci",
      "npx eslint App",
      "npm --prefix App run build"
    ],
    "public": "App/build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=604800"
          }
        ],
        "source": "**/*.@(jpg|jpeg|gif|png)"
      },
      {
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=86400"
          }
        ],
        "source": "**/*.@(js|css)"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
