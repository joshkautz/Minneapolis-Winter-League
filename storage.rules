rules_version = '2';

// Storage security rules
// All stored files are public images (team logos, etc.) made accessible via makePublic()
// These rules only affect Firebase SDK access - GCS public URLs bypass them entirely

service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      allow read: if true;    // All images are public
      allow create: if false; // Uploads handled by Cloud Functions
      allow update: if false;
      allow delete: if false;
    }
  }
}