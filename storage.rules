rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    //////////////////////////////////////////////////////////////////////////////
    // PUBLIC READ ACCESS - Allow reading uploaded files                        //
    //////////////////////////////////////////////////////////////////////////////
    
    match /{allPaths=**} {

      allow read: if true;
      
      //////////////////////////////////////////////////////////////////////////
      // HIGHLY RESTRICTED WRITE ACCESS - Firebase Functions handle uploads   //
      //////////////////////////////////////////////////////////////////////////
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }
  }
}