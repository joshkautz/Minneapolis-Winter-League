rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
    
      // WRITE:
      // Authenticated.
      // Email is verified.
      // Upload is less than 5MB.
      // Upload is an image.
      allow write:
        if request.auth != null &&
        request.auth.token.email_verified == true &&
        request.resource.size < 5 * 1024 * 1024 &&
        request.resource.contentType.matches('image/.*');
        
      allow read: if true;
    }
  }
}